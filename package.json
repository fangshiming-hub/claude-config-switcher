{
  "name": "@weishiren/claude-config-switcher",
  "version": "1.0.0",
  "type": "module",
  "description": "A CLI tool for quickly switching between different Claude configuration files",
  "main": "lib/config-manager.js",
  "bin": {
    "ccs": "./bin/cli.js",
    "claude-config-switch": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "lib/",
    "templates/",
    "LICENSE"
  ],
  "scripts": {
    "start": "node bin/cli.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint .",
    "prepublishOnly": "npm test && npm run lint",
    "release": "npm run release:patch",
    "release:patch": "npm run release:version -- patch",
    "release:minor": "npm run release:version -- minor",
    "release:major": "npm run release:version -- major",
    "release:version": "node scripts/release.js"
  },
  "keywords": [
    "claude",
    "configuration",
    "switch",
    "cli",
    "settings",
    "environment"
  ],
  "author": "weishiren",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fangshiming-hub/claude-config-switcher.git"
  },
  "bugs": {
    "url": "https://github.com/fangshiming-hub/claude-config-switcher/issues"
  },
  "homepage": "https://github.com/fangshiming-hub/claude-config-switcher#readme",
  "dependencies": {
    "prompts": "^2.4.2",
    "chalk": "^4.1.2",
    "yargs": "^17.7.2",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "@types/node": "^20.11.5"
  },
  "engines": {
    "node": ">=14.18.0"
  }
}